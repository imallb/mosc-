<!doctype html>
<html>
<head>
<meta charset="utf-8">
<link href="/layui/css/layui.css" rel="stylesheet" type="text/css">
<script src="/layui/layui.js"></script>
<style>
.login{
	padding:20px;
}
.btn_box{
	overflow:hidden;
	text-align:center;
}
.layui-btn{
	width:60%;
}
</style>
</head>

<body>
<div class="login">
    <form class="layui-form">
        <div class="layui-form-item">
            <label class="layui-form-label"><b>用户名：</b></label>
            <div class="layui-input-block">
                <input type="text" name="users" placeholder="请输入用户名" class="layui-input" autocomplete="off">
            </div>
        </div> 
        <div class="layui-form-item">
            <label class="layui-form-label"><b>密　码：</b></label>
            <div class="layui-input-block">
                <input type="password" name="password" placeholder="请输入密码" class="layui-input" autocomplete="off">
            </div>
        </div>
        <div class="btn_box">
            <a class="layui-btn layui-btn-big sub">登陆</a>
        </div>
    </form>
</div>
</body>
</html>