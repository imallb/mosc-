<%- include('module/head') %>
<style>
html,body{
	width:100%;
	height:100%;
}
body{
	background:#333;
}
.login{
	position: absolute;
	left: 50%;
	top:200px;
	width:500px;
	overflow:hidden;
	margin-left:-272px;
	padding:40px 20px;
	border-radius:10px;
	box-shadow:0 0 8px #333;
	background:white;
	z-index:999;
}
.layui-form-label{
	width:auto;
}
.layui-input-block{
	margin-left:90px;
}
.btn_box{
	margin-top:20px;
	text-align: center;
}
.layui-btn{
	width: 80%;
}
#canvas{
	position: absolute;
	top: 0;
	left: 0;
	z-index:9;
}
</style>

<body>
<div class="login">
    <form class="layui-form" action="/mosc/login" method="post">
        <div class="layui-form-item">
            <label class="layui-form-label"><b>用户名：</b></label>
            <div class="layui-input-block">
                <input type="text" name="users" placeholder="请输入用户名" class="layui-input" autocomplete="off">
            </div>
        </div> 
        <div class="layui-form-item">
            <label class="layui-form-label"><b>密　码：</b></label>
            <div class="layui-input-block">
                <input type="password" name="password" placeholder="请输入密码" class="layui-input" autocomplete="off">
            </div>
        </div>
        <div class="btn_box">
            <button class="layui-btn layui-btn-big" lay-submit lay-filter="sub">登录</button>
        </div>
    </form>
</div>
<canvas id="canvas"></canvas>

<script src="/js/dots.js"></script>
<script src="/js/main.js"></script>
<script>
layui.use(['form','jquery'],function(){
	var $ = layui.jquery,
		form = layui.form;
		
	form.on('submit(sub)', function(data){
		if(data.field.users==''){
			$('[name=users]').focus();
			layer.msg('用户名不能为空！');
			return false;
		};
		if(data.field.password==''){
			$('[name=password]').focus();
			layer.msg('密码不能为空！');
			return false;
		};
	});
	
});
</script>
</body>
</html>
