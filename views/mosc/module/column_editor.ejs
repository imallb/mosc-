<style>
.zz{
	width:100%;
	background:black;
	opacity:0.3;
	display:none;
	position:fixed;
	left:0;
	top:0;
	z-index:9999;
}
.col{
	width:700px;
	height:300px;
	position:fixed;
	background:white;
	display:none;
	border:1px solid #ccc;
	z-index:99999;
	box-shadow:0 0 20px #999;
}
.col_close{
	width:100%;
	height:30px;
	overflow:hidden;
	cursor:default;
}
.col_close span{
	height:30px;
	width:30px;
	text-align:center;
	line-height:30px;
	font-size:30px;
	color:#333;
	float:right;
}
.col form{
	padding:30px 40px 10px;
}
.btn_box_k{
	padding-top:30px;
	text-align:center;
	border-top:1px solid #ccc;
	margin-top:15px;
}
</style>

<div class="col" id="col">
	<div class="col_close"><span>&times;</span></div>
	
	<% if( post.column==undefined ){ %>
	
	<form class="layui-form" action="/mosc/column/" method="post">
		<div class="layui-form-item">
			<label class="layui-form-label"><i>*</i><b>文章标题：</b></label>
			<div class="layui-input-block">
				<input type="text" name="title" placeholder="请输入标题" class="layui-input">
			</div>
		</div>
		
		<div class="layui-form-item">
			<label class="layui-form-label"></label>
			<div class="layui-input-block">
				<input type="checkbox" name="read[]" title="审核" checked>
				<span style="color:#666;">创建的栏目默认为审核状态，请把栏目信息填充完整后再发布。</span>
			</div>
		</div>
		<div class="btn_box_k">
			<button class="layui-btn layui-btn-big" lay-submit lay-filter="sub" style="width:260px;">提交文章</button>
		</div>
	</form>
	
	<% }else{ %>
	
	<form class="layui-form" action="/mosc/column/column_change?id=<%= post.column._id %>&page=<%= post.page %>" method="post">
		<div class="layui-form-item">
			<label class="layui-form-label"><i>*</i><b>文章标题：</b></label>
			<div class="layui-input-block">
				<input type="text" name="title" placeholder="请输入标题" class="layui-input" value="<%= post.column.title %>">
			</div>
		</div>
		
		<div class="layui-form-item">
			<label class="layui-form-label"></label>
			<div class="layui-input-block">
				<% if( post.column.read[0] == 'on' ){ %>
					<input type="checkbox" name="read[]" title="审核" checked>
				<% }else{ %>
					<input type="checkbox" name="read[]" title="审核">
				<% } %>
				<span style="color:#666;">创建的栏目默认为审核状态，请把栏目信息填充完整后再发布。</span>
			</div>
		</div>
		<div class="btn_box_k">
			<button class="layui-btn layui-btn-big" lay-submit lay-filter="sub" style="width:260px;">提交文章</button>
		</div>
	</form>
	
	<% } %>
	
</div>

<div class="zz"></div>

<script>
layui.use(['form','jquery','layer'],function(){
	var $ = layui.jquery;
	var layer = layui.layer;
	var form = layui.form;

	// 弹窗
	$('.zz').css('height',document.documentElement.clientHeight+'px');
	$('.col').css({
		'left':(document.documentElement.clientWidth - $('.col').width())/2+'px',
		'top':(document.documentElement.clientHeight - $('.col').height())/2+'px'
	});
	$(window).resize(function(){
		$('.zz').css('height',document.documentElement.clientHeight+'px');
		$('.col').css({
			'left':(document.documentElement.clientWidth - $('.col').width())/2+'px',
			'top' :(document.documentElement.clientHeight - $('.col').height())/2+'px'
		});
	});
	$('#ceart_col').on('click',function(){
		$('.zz').show();
		$('.col').show();
	});
	$('.col_close').on('click',function(){
		$('.zz').hide();
		$('.col').hide();
	});
	form.on('submit(sub)', function(data){
		if(data.field.title==''){
			$('[name=title]').focus();
			layer.msg('标题不能为空！');
			return false;
		};
		layer.load(2);
		$('.zz').hide();
		$('.col').hide();
	});
})
</script>
