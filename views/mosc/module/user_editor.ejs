<style>
.zz{
	width:100%;
	background:black;
	opacity:0.3;
	display:none;
	position:fixed;
	left:0;
	top:0;
	z-index:9999;
}
.col{
	width:700px;
	height:300px;
	position:fixed;
	background:white;
	display:none;
	border:1px solid #ccc;
	z-index:99999;
	box-shadow:0 0 20px #999;
}
.col_close{
	width:100%;
	height:30px;
	overflow:hidden;
	cursor:default;
}
.col_close span{
	height:30px;
	width:30px;
	text-align:center;
	line-height:30px;
	font-size:30px;
	color:#333;
	float:right;
}
.col form{
	padding:30px 40px 10px;
}
.btn_box_k{
	padding-top:30px;
	text-align:center;
	border-top:1px solid #ccc;
	margin-top:30px;
}
</style>

<div class="col" id="col">
	<div class="col_close"><span>&times;</span></div>
	
	<form class="layui-form">
		<div class="layui-form-item">
			<label class="layui-form-label"><i>*</i><b>用户账号：</b></label>
			<div class="layui-input-block">
				<input type="text" name="users" placeholder="请输入用户账号" class="layui-input">
			</div>
		</div>
		
		<div class="layui-form-item">
			<label class="layui-form-label"><i>*</i><b>用户密码：</b></label>
			<div class="layui-input-block">
				<input type="password" name="password" placeholder="请输入用户密码" class="layui-input">
			</div>
		</div>
		
		<div class="btn_box_k">
			<button class="layui-btn layui-btn-big" lay-submit lay-filter="sub" style="width:260px;">添加用户</button>
		</div>
	</form>
	
</div>

<div class="col" id="col_pasw">
	<div class="col_close"><span>&times;</span></div>
	
	<form class="layui-form">
		<div class="layui-form-item">
			<label class="layui-form-label"><i>*</i><b>新密码：</b></label>
			<div class="layui-input-block">
				<input type="password" name="newpasw" placeholder="请输入新密码" class="layui-input">
			</div>
		</div>
		
		<div class="layui-form-item">
			<label class="layui-form-label"><i>*</i><b>再次输入：</b></label>
			<div class="layui-input-block">
				<input type="password" name="againpasw" placeholder="再次输入用户密码" class="layui-input">
			</div>
		</div>
		
		<div class="btn_box_k">
			<button class="layui-btn layui-btn-big" lay-submit lay-filter="Modifypasw" style="width:260px;">修改密码</button>
		</div>
	</form>
	
</div>

<div class="zz"></div>

<script>
layui.use(['form','jquery','layer'],function(){
	var $ = layui.jquery;
	
	$('.zz').css('height',document.documentElement.clientHeight+'px');
	$('.col').css({
		'left':(document.documentElement.clientWidth - $('.col').width())/2+'px',
		'top':(document.documentElement.clientHeight - $('.col').height())/2+'px'
	});
	$(window).resize(function(){
		$('.zz').css('height',document.documentElement.clientHeight+'px');
		$('.col').css({
			'left':(document.documentElement.clientWidth - $('.col').width())/2+'px',
			'top' :(document.documentElement.clientHeight - $('.col').height())/2+'px'
		});
	});
	$('.col_close').on('click',function(){
		$('.zz').hide();
		$('.col').hide();
		$('[name=users]').val('');
		$('[name=password]').val('');
	});
})
</script>
